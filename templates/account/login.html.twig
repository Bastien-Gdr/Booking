{% extends 'base.html.twig' %}

{% block title %}Page de connexion
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 bg-light mx-auto mt-5">
				<h1 class="text-center m-5 h2 text-info">Connectez-vous !</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, l'identifiant ou le mot de passe ne correspondent pas.</div>
                {% endif %}

				<form action="{{path("account_login")}}" method="post">

					<div class="form-group m-3 p-3">
						<label for="email">Email</label>
						<input type="text" name="_username" id="email" class="form-control form-control-lg" placeholder="Adresse email" required value="{{ username }}">
					</div>

					<div class="form-group m-3 p-3">
						<label for="password">Mot de passe</label>
						<input type="password" name="_password" id="password" class="form-control form-control-lg" placeholder="Mot de passe" required>
					</div>

                    <div class="form-group text-center m-5">
                        <button type="submit" class="btn btn-info">Connexion</button>
                    </div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
