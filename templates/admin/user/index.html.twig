{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs
{% endblock %}

{% block body %}
	<div class="container-fluid px-5">
		<h1 class="my-5">Gestion des utilisateurs</h1>

        <table class="table table-hover">
            <thead class="table-warning text-center">
                <th>ID</th>
                <th>Avatar</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Introduction</th>
                <th></th>
            </thead>

            <tbody class="text-center">
                {% for user in pagination.data %}
                    <tr>
                        <td class="py-5">{{user.id}}</td>
                        <td class="py-5"><img src="{{user.avatar}}" class="avatar avatar-sm" alt="{{user.fullName}}"></td>
                        <td class="py-5">{{user.fullName}}</td>
                        <td class="py-5">{{user.email}}</td>
                        <td class="py-5">{{user.introduction}}</td>

                        <td class="py-5 ">
                            <a href="{{path('admin_users_edit',{'id':user.id})}}" class="btn btn-info mx-2"><i class="fas fa-edit"></i></button>
                            <a href="{{path('admin_users_delete',{'id':user.id})}}" class="btn btn-danger"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        
        </table>

        {{pagination.display()}}

	</div>

{% endblock %}
