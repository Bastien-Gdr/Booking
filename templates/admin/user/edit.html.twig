{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un profil d'utilisateur{% endblock %}

{% block body %}
    <main class="container-fluid mt-5">
        <h1 class="my-3 p-3 text-center">Modification du profil : {{user.fullName}}</h1>

        <div class="row mt-5">

            <div class="col-md-8 offset-2 px-5">
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-success mt-3"><i class="fas fa-check"></i> Enregistrer</button>
                <a href="{{path('admin_users_list')}}" class="btn btn-dark mt-3">Retour</a>
                {{form_end(form)}}
            </div>
        </div>
    </main>
{% endblock %}
