{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un commentaires{% endblock %}

{% block body %}
    <main class="container-fluid mt-5">
        <h1 class="my-3 p-3 text-center">Modification du commentaire n° {{comments.id}}</h1>

        <div class="row mt-5">
            <div class="col-8 offset-2 p-5 alert alert-info">
                <p><strong>Annonce liée : {{comments.ad.title}}</strong></p>
                <p>Auteur : {{comments.ad.author.fullName}}</p>
                <p>Date de création : {{comments.createdAt | date('d/m/Y H:I')}}</p>
                <p>Note donnée : {{comments.rating}}</p>
            </div>
            <div class="col-md-8 offset-2 px-5">
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i>Enregistrer</button>
                {{form_end(form)}}
            </div>
        </div>
    </main>
{% endblock %}
